<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/charging_header">


        <CheckBoxPreference
            android:defaultValue="false"
            android:key="display_battery"
            android:title="Display battery percentage" />

        <ListPreference
            app:defaultValue="none"
            app:entries="@array/charged_entries"
            app:entryValues="@array/charged_values"
            app:key="charged"
            app:title="@string/charging_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about_header">
        <Preference
            app:summary="@string/author_name"
            app:title="@string/app_name" />
        <d.spidchenko.sampledaydream.preferences.RatePreference
            app:summary="@string/rate_app_description"
            app:title="@string/rate_app" />
        <d.spidchenko.sampledaydream.preferences.LinkPreference
            app:summary="@string/support_me"
            app:title="@string/buy_a_beer" />
    </PreferenceCategory>

</PreferenceScreen>